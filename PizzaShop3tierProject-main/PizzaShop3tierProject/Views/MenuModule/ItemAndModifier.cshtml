<script>
    $(document).ready(() => {

        $("#Items").on("click", () => {
        $("#Items").addClass("selected-tab");
         $("#Modifiers").removeClass("selected-tab");
                $.ajax({
                    url: "/MenuModule/ForItems",
                    type: "GET",
                    success: (data) => {
                        $("#home").html(data);
                    }
                });

        });

        $("#Modifiers").on("click", () => {
            $("#Modifiers").addClass("selected-tab");
            $("#Items").removeClass("selected-tab");
            $.ajax({
                url: "/MenuModule/ForModifiers",
                type: "GET",
                success: (data) => {
                    $("#home").html(data);
                }
            });
        });

    })
</script>