@{
    Layout="~/Views/Shared/_Layout.cshtml";
    ViewData["title"]="Role Select Page";
}


<div class=" d-flex ms-5 mt-5 h-100 " id="content">
    <div class="content-role shadow rounded w-75 p-2">
        <div class="h-100 w-100 d-flex flex-column justify-content-center">
                <div class="role-act d-flex justify-content-between border-bottom  m-2">
                    <h5>Role</h5>
                    <h5>Action</h5>
                </div>
                <div class="justify-content-between border-bottom m-2 d-flex">
                    <p>Admin</p>
                    <a asp-action="Permission" asp-controller="Role" asp-route-id="1">
                        <i class="fa fa-pencil"></i>
                    </a>
                </div>
                <div class="d-flex justify-content-between border-bottom m-2">
                    <p>Account Manager</p>
                    <a asp-action="Permission" asp-controller="Role" asp-route-id="2">
                        <i class="fa fa-pencil"></i>
                    </a>
                </div>
                <div class="d-flex justify-content-between border-bottom m-2">
                    <p>Stock Manager</p>
                    <a asp-action="Permission" asp-controller="Role" asp-route-id="3">
                        <i class="fa fa-pencil"></i>
                    </a>
                </div>
        </div>
    </div>
</div>
